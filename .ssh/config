Host *
    AddKeysToAgent yes
    UseKeychain yes

Host raspberrypi
    HostName 192.168.1.195
    User nermin
    ForwardAgent yes

# Use the following 2 when requiring separate ssh key for personal projects on work computer
Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_rsa

Host github-personal
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_rsa_personal
